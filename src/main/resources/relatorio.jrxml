<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="relatorio_venda" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              uuid="abcde123-4567-890a-bcde-1234567890ab">

    <!-- Campos simples -->
    <field name="id" class="java.lang.Long"/>
    <field name="valorTotalDaVenda" class="java.lang.Double"/>
    <field name="lucro" class="java.lang.Double"/>
    <field name="orcamentoIdsFormatado" class="java.lang.String"/> <!-- Campo formatado -->

    <!-- Campos aninhados do Cliente -->
    <field name="cliente.nome" class="java.lang.String"/>
    <field name="cliente.documento" class="java.lang.String"/>
    <field name="cliente.contato.telefone" class="java.lang.String"/>
    <field name="cliente.contato.email" class="java.lang.String"/>
    <field name="cliente.endereco.logradouro" class="java.lang.String"/>
    <field name="cliente.endereco.numero" class="java.lang.String"/>
    <field name="cliente.endereco.bairro" class="java.lang.String"/>
    <field name="cliente.endereco.cep" class="java.lang.String"/>
    <field name="cliente.endereco.estado" class="java.lang.String"/>
    <field name="cliente.endereco.complemento" class="java.lang.String"/>

    <!-- Título -->
    <title>
        <band height="40">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Relatório de Venda Detalhado]]></text>
            </staticText>
        </band>
    </title>

    <!-- Detalhes -->
    <detail>
        <band height="220">

            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA["Venda ID: " + $F{id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="20" width="300" height="20"/>
                <textFieldExpression><![CDATA["Valor Total: R$ " + $F{valorTotalDaVenda}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="40" width="300" height="20"/>
                <textFieldExpression><![CDATA["Lucro: R$ " + $F{lucro}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="60" width="500" height="20"/>
                <textFieldExpression><![CDATA["Orçamentos: " + $F{orcamentoIdsFormatado}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="90" width="300" height="20"/>
                <text><![CDATA[Informações do Cliente:]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="110" width="400" height="20"/>
                <textFieldExpression><![CDATA["Nome: " + $F{cliente.nome}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="130" width="400" height="20"/>
                <textFieldExpression><![CDATA["Documento: " + $F{cliente.documento}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="150" width="400" height="20"/>
                <textFieldExpression><![CDATA["Telefone: " + $F{cliente.contato.telefone} + " | Email: " + $F{cliente.contato.email}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="170" width="500" height="20"/>
                <textFieldExpression><![CDATA[
                    "Endereço: " + $F{cliente.endereco.logradouro} + ", " +
                    $F{cliente.endereco.numero} + " - " + $F{cliente.endereco.bairro} +
                    " - " + $F{cliente.endereco.estado} +
                    " | CEP: " + $F{cliente.endereco.cep}
                ]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>
